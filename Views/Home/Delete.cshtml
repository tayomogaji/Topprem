@model XI.Models.Player


@{
    ViewBag.Title = "Delete";
}

<div class="banner">
    <div class="container">
        <div class="row">
            <div class="col-md-6 text-left">
                <br>
                <h1 id="title">Delete</h1>
            </div>
            <div class="col-md-6 text-right">
                <img src="~/myImages/premlogo.png" />
            </div>
        </div>
    </div>
</div>


@using (Html.BeginForm())
{
<div class="Delete">
    <div class="container">
        <div class="row"><br>
            <div class=" col-md-8 col-md-offset-2">
    @*<dl class="dl-horizontal">*@
            @*</dl>*@
        <div class=" col-md-3">
            <img src="@Url.Content(Model.Img1)" height="200" />
        </div>
            <div class="col-md-5 col-md-offset-2 text-center">
                <h4>@Html.DisplayFor(model => model.Name)</h4>
                <hr>
                <h4>Are you sure you want to permanently delete this player from the Topprem database?</h4><br>
                @Html.AntiForgeryToken()
                <input type="submit" value="Yes" class="act" />
                @Html.ActionLink("No", "Index",null,new { @class = "act" })
                </div>
            </div>
        </div><br>
    </div>
 </div>
}