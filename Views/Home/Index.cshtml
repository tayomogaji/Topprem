@model IEnumerable<XI.Models.Player>
@{
    ViewBag.Title = "Home";
}

<div class="banner">
<div class="container">
    <div class="row">
        <div class="col-md-6 text-left"><br>
        <h1 id="title">Topprem</h1> 
    </div>
        <div class="col-md-6 text-right">
            <img src="~/myImages/premlogo.png" />
        </div>
</div>
</div>
</div>

    <div class="filter">    
            @using (Html.BeginForm())
            {
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-6 text-right">
                                <b>Team:</b> @Html.DropDownList("playerTeam", "All")
                                <input type="submit" value="Search" />
                            </div>
                            <div class="col-md-6 text-left">
                                <b>Player:</b> @Html.TextBox("SearchString")
                                <input type="submit" value="Search" />
                            </div>
                        </div>
                    </div>
                </div>   
            }
        </div>

<div class="Home">
    <table class="table" id="table">
        <tr>
            <th><br><br></th>
            <th><br>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th><br>
                @Html.DisplayNameFor(model => model.Age)
                <br></th>
            <th><br>
                @Html.DisplayNameFor(model => model.Nation)
                <br></th>
            <th><br>
                @Html.DisplayNameFor(model => model.Team)
                <br></th>
            <th><br>
                @Html.DisplayNameFor(model => model.Position)
                <br></th>
            <th><br>
                @Html.DisplayNameFor(model => model.Appearances)
                <br></th>
            <th><br><br></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@Url.Content(item.Img1)" height="100" />
                </td>
                <td><br>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td><br>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td><br>
                    @Html.DisplayFor(modelItem => item.Nation)
                </td>
                <td><br>
                    @Html.DisplayFor(modelItem => item.Team)
                </td>
                <td><br>
                    @Html.DisplayFor(modelItem => item.Position)
                </td>
                <td><br>
                    @Html.DisplayFor(modelItem => item.Appearances)
                </td>

                <td><br>
                    @Html.ActionLink("Overview", "Details",new { id = item.Id }, new { @class = "act" })
                </td>
            </tr>
        }
    </table>

            <div class="row">
                <br>
                <div class="col-md-12 text-center">
                    @Html.ActionLink("Add Player", "Create", null, new { @class = "act" })
                </div>
            </div>
     <br>  
</div>