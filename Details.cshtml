@model XI.Models.Player

@{
    ViewBag.Title = "Overview";
}

<div class="banner">
    <div class="container">
        <div class="row">
            <div class="col-md-6 text-left">
                <br>
                <h1 id="title">Overview</h1>
            </div>
            <div class="col-md-6 text-right">
                <img src="~/myImages/premlogo.png" />
            </div>
        </div>
    </div>
</div>

@using (Html.BeginForm())
{

<div class="Overview">
    <div class="container">
        <div class="row"><br>
            <div class="col-md-4 col-md-offset-1">
               <img src="@Url.Content(Model.Img2)" height="400"/>
            </div>
            <div class="col-md-5">
                <h4>@Html.DisplayFor(model => model.Name)</h4>
                <hr />
                <p>@Html.DisplayFor(model => model.Bio)</p><br>
                <div class="col-md-6 text-left">
                @Html.ActionLink("Back to list", "Index",null, new { @class = "act" })
                    </div>
                    <div class=" col-md-6 text-right">
                @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "act" }) &nbsp;
                @Html.ActionLink("Delete", "Delete", new { id = Model.Id}, new { @class = "act" }) 
                    </div>
            </div>
      </div> 
    </div><br>
    </div>
}
